<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.MainActivity">


    <FrameLayout
        android:id="@+id/frameCamera"
        android:layout_above="@id/frameInfrared"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="普通相机模块"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </TextView>
        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/cameraButton"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </com.rokid.glass.ui.button.GlassButton>
    </FrameLayout>

    <FrameLayout
        android:layout_centerVertical="true"
        android:id="@+id/frameInfrared"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="红外模块"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </TextView>
        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/infraredButton"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </com.rokid.glass.ui.button.GlassButton>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameUltraviolet"
        android:layout_below="@id/frameInfrared"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="紫外模块"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </TextView>
        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/ultravioletButton"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </com.rokid.glass.ui.button.GlassButton>
    </FrameLayout>

</RelativeLayout>