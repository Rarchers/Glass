<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.CameraActivity">



    <com.example.glass.ui.other.AutoFitTextureView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.example.glass.ui.other.AutoFitTextureView>


    <com.example.glass.ui.other.UltravioletMessageView
        android:id="@+id/ultravioletMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true">
    </com.example.glass.ui.other.UltravioletMessageView>
    <FrameLayout
        android:id="@+id/frameStartUltraviolet"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="开启紫外模式"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </TextView>
        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/ultravioletStartButton"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </com.rokid.glass.ui.button.GlassButton>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/frameStartInfrared"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_below="@id/frameStartUltraviolet"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="开启红外模式"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </TextView>
        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/infraredStartButton"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </com.rokid.glass.ui.button.GlassButton>
    </FrameLayout>


</RelativeLayout>